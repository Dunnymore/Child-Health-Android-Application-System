<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_vaccination"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/backgroundImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bb"
        android:scaleType="fitXY"
        android:alpha="0.3" /> <!-- Set the alpha value for opacity -->


    <EditText
        android:id="@+id/child_name_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Child's Name"
        android:layout_margin="16dp"/>

    <RadioGroup
        android:id="@+id/gender_radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/child_name_edit_text"
        android:orientation="horizontal"
        android:padding="16dp">

        <RadioButton
            android:id="@+id/male_radio_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Male"/>

        <RadioButton
            android:id="@+id/female_radio_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Female"/>
    </RadioGroup>

    <EditText
        android:id="@+id/dob_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/gender_radio_group"
        android:hint="Select Date of Birth"
        android:focusable="false"
        android:layout_margin="16dp"/>

    <Button
        android:id="@+id/submit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dob_edit_text"
        android:layout_centerHorizontal="true"
        android:background="@drawable/text_box_background"
        android:text="Submit"
        android:layout_marginTop="24dp"/>

    <RelativeLayout
        android:id="@+id/baby_details_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/submit_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp">



        <TextView
            android:id="@+id/textViewDateTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Child Details"
            android:textSize="18sp"
            android:layout_centerInParent="true"
            android:background="@drawable/text_box_background"
            android:padding="16dp"/>

    </RelativeLayout>

</RelativeLayout>
